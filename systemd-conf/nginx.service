[Unit]
Description=nginx Container
After=docker.service
Requires=docker.service
 
[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker pull nginx
ExecStart=/usr/bin/docker run --rm --net=host -p 80:80 -v /var/www/html:/usr/share/nginx/html nginx
 
[Install]
WantedBy=multi-user.target
